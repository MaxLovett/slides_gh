@article{AkhtaruzzamanEtAl2017,
  title = {Confucius Institutes and FDI Flows from China to Africa},
  author = {Akhtaruzzaman, Muhammad and Berg, Nathan and Lien, Donald},
  date = {2017-07},
  journaltitle = {China Economic Review},
  volume = {44},
